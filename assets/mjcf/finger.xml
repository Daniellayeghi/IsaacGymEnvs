<mujoco model="finger">
  <custom>
    <numeric data="90.0 90.0" name="init_qpos"/>
  </custom>

  <compiler inertiafromgeom="true"/>

  <option timestep="0.01" collision="all"/>

    <worldbody>
        <light name="light" directional="true" diffuse=".6 .6 .6" pos="0 0 2" specular=".3 .3 .3"/>
        <geom name="ground" type="plane" pos="0 0 -0.6" size=".6 .2 10"  solimp="0 0.9 0.01" solref=".02 1"/>
        <camera name="cam0" pos="0 -1 .8" xyaxes="1 0 0 0 1 2"/>
        <camera name="cam1" pos="0 -1 .4" xyaxes="1 0 0 0 0 1" />

        <body name="finger">
            <body name="proximal" pos="0 0 -0.01">
                <geom name="proximal_decoration" type="cylinder" fromto="0 -.033 0 0 .033 0" size=".034" solimp="0 0.9 0.01" solref=".02 1" condim="1"/>
                <joint name="proximal" type="hinge" axis="0 -1 0" range="-150 -80" ref="-90" damping="0.05" limited="false" />
                <geom name="proximal" type="capsule" size=".03" fromto="0 0 0 0 0 -.17" solimp="0 0.9 0.01" solref=".02 1" condim="1"/>
                <body name="distal" pos="0 0 -.18">
                    <joint name="distal" type="hinge" axis="0 -1 0" range="-50 50" damping="0.05" limited="false"/>
                    <geom name="distal" type="capsule" size=".028" fromto="0 0 0 0 0 -.16" solimp="0 0.9 0.01" solref=".02 1" condim="1"/>
                    <geom name="fingertip" type="capsule" size=".03" fromto="0 0 -.13 0 0 -.161" solimp="0 0.9 0.01" solref=".02 1" condim="1"/>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name="proximal" joint="proximal" gear="3" ctrllimited="true" ctrlrange="-1 1"/>
        <motor name="distal" joint="distal" gear="1.5" ctrllimited="true" ctrlrange="-1 1"/>
    </actuator>
</mujoco>
